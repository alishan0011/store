<%= form_with model: [:admin, admin_category],
              url: admin_category.persisted? ? admin_category_path(admin_category) : admin_categories_path,
              method: admin_category.persisted? ? :patch : :post,
              local: true,
              html: { id: "edit-category-form" } do |form| %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title, id: "edit-category-title",
        class: "block w-full rounded-md border px-3 py-2 text-sm shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if admin_category.errors[:title].any?}" %>
  </div>

  <div>
    <%= form.label :session, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :session, id: "edit-category-session",
        class: "block w-full rounded-md border px-3 py-2 text-sm shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-500' if admin_category.errors[:session].any?}" %>
  </div>

  <div class="flex justify-end">
    <%= form.submit "Save", 
        class: "inline-flex items-center justify-center px-5 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-md shadow-md transition" %>
  </div>

<% end %>

<header>
  <nav class="bg-white border-b border-gray-200 px-4 lg:px-6 py-3 dark:bg-gray-800">
    <div class="max-w-screen-xl mx-auto flex flex-wrap items-center justify-between">
      
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <img src="/your-logo.svg" class="h-8 w-auto mr-2" alt="Your Logo">
        <span class="text-xl font-semibold text-gray-900 dark:text-white">YourBrand</span>
      </a>

      <!-- Hamburger Button for Mobile -->
      <button type="button" id="mobile-menu-button" class="inline-flex items-center p-2 ml-3 text-sm text-gray-500 rounded-lg lg:hidden hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>

      <!-- Menu Links -->
      <div id="mobile-menu" class="hidden w-full lg:flex lg:w-auto lg:items-center">
        <ul class="flex flex-col mt-4 lg:mt-0 lg:flex-row lg:space-x-8 text-sm font-medium">
          <li><a href="#" class="block py-2 px-4 text-white bg-blue-600 rounded lg:bg-transparent lg:text-blue-600 dark:text-white">Home</a></li>
          <li><a href="#" class="block py-2 px-4 text-gray-700 hover:text-blue-600 dark:text-gray-300 dark:hover:text-white">Video Lecture</a></li>
          <li><a href="#" class="block py-2 px-4 text-gray-700 hover:text-blue-600 dark:text-gray-300 dark:hover:text-white">Team</a></li>
          <li><a href="#" class="block py-2 px-4 text-gray-700 hover:text-blue-600 dark:text-gray-300 dark:hover:text-white">Contact</a></li>
        </ul>
      </div>

      <!-- Auth Section -->
      <div class="hidden lg:flex items-center space-x-4">
        <% if user_signed_in? %>
          <!-- User Profile -->
          <div class="flex items-center space-x-3">
            <% if current_user.image.attached? %>
              <%= image_tag url_for(current_user.image), class: "w-10 h-10 rounded-full object-cover" %>
            <% else %>
              <%= image_tag "default-avatar.png", class: "w-10 h-10 rounded-full object-cover" %>
            <% end %>
            <div class="text-sm text-gray-800 dark:text-white">
              <div><%= current_user.name %></div>
              <div class="text-xs text-gray-500 dark:text-gray-300"><%= current_user.email %></div>
            </div>
          </div>

          <!-- Logout Button -->
          <%= button_to "Logout", destroy_user_session_path, method: :delete, form: { class: "inline" },
                class: "bg-red-600 text-white text-sm px-4 py-2 rounded hover:bg-red-700 transition duration-200" %>

        <% else %>
          <!-- Login/Register -->
          <%= link_to "Login", new_user_session_path, class: "text-gray-700 dark:text-white hover:underline text-sm px-4 py-2" %>
          <%= link_to "Get Started", new_user_registration_path, class: "text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:from-blue-600 hover:to-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 transition duration-200 dark:focus:ring-blue-800" %>
        <% end %>
      </div>

    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const toggleButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    toggleButton.addEventListener('click', function () {
      mobileMenu.classList.toggle('hidden');
    });
  });
</script>
